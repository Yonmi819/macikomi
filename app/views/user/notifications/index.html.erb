<%= stylesheet_link_tag 'user/notifications' %>

<div class="container">
 <h4>通知一覧</h4>
  <div class="notifications-contents">
   <%= link_to '全削除', user_notifications_destroy_all_path, method: :delete %>
    <div class="common-contents">
     <div class="posts">
      <% if @notifications.exists? %>
      <ul class="allnotifications-list">
       <%= render @notifications %>
       <%= paginate @notifications %>
      </ul>
      <% else %>
      <h5 class="allnotifications-no">通知はありません</h5>
      <% end %>
     </div>
    </div>
  </div>
</div>


  
    