<%= stylesheet_link_tag 'user/notifications' %>

<div class="container">
 <h4>通知一覧</h4>
  <div class="notifications-contents">
   <%= link_to  user_notifications_destroy_all_path, method: :delete do %><i class="fas fa-trash" style="color: black;"></i>
    <h7 style="color: black;">全削除</h7>
   <% end %>

   <div class="common-contents">
    <div class="posts">
     <% if @notifications.exists? %>
      <ul class="allnotifications-list">
       <%= render @notifications %>
       <%= paginate @notifications %>
      </ul>
     <% else %>
      <h5 class="allnotifications-no">通知はありません</h5>
     <% end %>
    </div>
   </div>
  </div>
</div>


  
    