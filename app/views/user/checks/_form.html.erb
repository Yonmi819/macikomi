<% if post.checked_by?(current_user) %>
  <%= link_to user_post_checks_path(post), method: :delete , remote: true do %><i class="fas fa-check-circle"></i>
    <%= post.checks.count %>
      <% end %>
        <% else %>
          <%= link_to user_post_checks_path(post), method: :post , remote: true do %><i class="far fa-check-circle"></i>
            <%= post.checks.count %>
              <% end %>
                <% end %>
   
   


