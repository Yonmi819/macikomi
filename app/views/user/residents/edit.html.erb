<%= stylesheet_link_tag 'user/residents' %>
<div class="container mt-4 mb-5">
  <h5 class="mb-5">ユーザー編集</h5>
  <div style="width:1000px">
    <%= form_with model: @user, url: user_resident_path(@user), method: :patch do |f| %>
    <%= render 'layouts/error', obj: @user %>
    
      <div class="field row mb-2">
        <%= f.label :名前, class: "col-3" %>
          <%= f.text_field :last_name, class: "col-3 form-control form-control-sm", placeholder: "姓" %>
            <%= f.text_field :first_name, class: "col-3 ml-2 form-control form-control-sm", placeholder: "名" %>
      </div>
      <div class="field row mb-2">
        <%= f.label :フリガナ, class: "col-3" %>
          <%= f.text_field :last_name_kana, class: "col-3 form-control form-control-sm", placeholder: "セイ" %>
            <%= f.text_field :first_name_kana, class: "col-3 ml-2 form-control form-control-sm", placeholder: "メイ" %>
      </div>
      <div class="field row mb-2">
        <%= f.label :メールアドレス, class: "col-3" %> 
          <%= f.text_field :email, class: "col-3 form-control form-control-sm", placeholder: "sample@gmail.com" %>
      </div>
      
      <div class="field row mb-2">
        <div class="col-3"></div>
        <div class="action stext-center">
          <%= f.submit "変更を保存", class: 'btn btn-outline-dark'%>
        </div>
        </div>
        <% end %>
        <div class="col-3"></div>
        <div class="action stext-end">
        
          <%= link_to '退会する',user_unsubscribe_path,class: 'btn btn-outline-dark' %>
        </div>
      
      
  </div>
</div>
