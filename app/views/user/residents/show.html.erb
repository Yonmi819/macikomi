<%= stylesheet_link_tag 'user/residents' %>
<div class="container col-md-5">
  
    <h4>ユーザー詳細</h4>
    <table class="table table-striped">
      <tr>
        <th>名前</th>
        <td>
          <%= @user.last_name + @user.first_name %>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <%= @user.last_name_kana + @user.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= @user.email %>
        </td>
      </tr>
      
    </table>
    
      <div class="btn-group">
        <%= link_to "編集する", edit_user_resident_path(@user), class: 'btn btn-outline-warning'%>
      </div>
      
  
  　　
</div>