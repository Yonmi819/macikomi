<table>
  <tbody>
    <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= post_comment.user.last_name %>
            <%= post_comment.user.fast_name %>さん </td>
        <td>
          <%= post_comment.comment %>
        </td>
        <td>
          <% if post_comment.user == current_user %>
            <%= link_to "Destroy", user_post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
              <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>