<div class="container col-md-6 mt-4 mb-5">
  <h5 class="mb-5 text-center">ログインする</h5>
  <div style="width:1000px" >
  
  <%=form_with model: @user, url: user_session_path do |f| %>
    <div class="field row mb-2">
      <%= f.label :メールアドレス, class: "col-3" %>
        <%= f.text_field :email, class: "col-3 form-control form-control-sm", placeholder: "sample@gmail.com" %>
    </div>
    <div class="field row mb-4">
      <%= f.label :パスワード, class: "col-3" %>
        <%= f.password_field :password, class: "col-3 form-control form-control-sm" %>
    </div>
    <div class="field row mb-4">
      <div class="col-3"></div>
      <div class="actions text-center">
        <%= f.submit "ログイン", class: 'btn btn-outline-primary btn-md'%>
      </div>
    </div>
    <% end %>
  </div>
  <h5 class="d-flex justify-content-center mb-1">まだ登録済みでない方は<a style="color:#691c0d;" href="/users/sign_up">こちら</a>からご登録をお願いします</h5>
</div>