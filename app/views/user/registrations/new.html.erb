<div class="container mt-4 mb-5">
  <div class="row">
  <h5 class="mb-3">コミュニティ登録ページ</h5>
</div>
<%= form_with model: @user, url: user_registration_path  do |f| %>
  <div class="field row mb-2">
    <%= f.label :last_name, "名前", class: "col-3" %>
    
    <%= f.text_field :last_name, class: "col-3 form-control form-control-sm", placeholder: "姓" %>
    
    
    <%= f.text_field :first_name, class: "col-3 ml-2 form-control form-control-sm", placeholder: "名" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :last_name_kana,"フリガナ", class: "col-3" %>
    
    <%= f.text_field :last_name_kana, class: "col-3 form-control form-control-sm", placeholder: "セイ" %>
    
    <%= f.text_field :first_name_kana, class: "col-3 ml-2 form-control form-control-sm", placeholder: "メイ" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :email,"メールアドレス", class: "col-3" %>
    <%= f.text_field :email, class: "col-3 form-control form-control-sm", placeholder: "sample@gmail.com" %>
  </div> 
  
  <div class="field row mb-2">
    <%= f.label :password,"パスワード(6文字以上)", class: "field col-3" %>
    <%= f.password_field :password, class: "col-3 form-control form-control-sm" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :password_confirmation,"パスワード(確認用)", class: "field col-3" %>
    <%= f.password_field :password_confirmation, class: "col-3 form-control form-control-sm" %>
  </div>
  <div class="field row mb-2">
    <div class="col-3"></div>
    <div class="actions">
      <%= f.submit "　　新規登録　　", class: 'btn btn-success btn-md'%>
    </div>
  </div>
<% end %>

  <div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
  <label class="form-check-label" for="flexCheckChecked">
    個人情報の取扱いに同意します
  </label>
</div>
  <h5 class="d-flex justify-content-left mb-1">既に登録済みの方は<a style="color:#691c0d;" href="/users/sign_in">こちら</a>からログインしてください</h5>
</div>
</div>