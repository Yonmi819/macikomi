<%= stylesheet_link_tag 'user/registrations' %>
  
<div class="container">
  <h4>コミュニティ登録ページ</h4>
    
   <div class="new-contents">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>
        <div class="field-2">
         <div class="label">
            <%= f.label :名前 %>
         </div>
         <div class="form-2">
            <%= f.text_field :last_name, class: "form-control form-control-sm", placeholder: "姓" %>
            <%= f.text_field :first_name, class: "ml-2 form-control form-control-sm", placeholder: "名" %>
         </div>
        </div>
        <div class="field-2">
         <div class="label">
            <%= f.label :フリガナ%>
         </div>
         <div class="form-2">
            <%= f.text_field :last_name_kana, class: "form-control form-control-sm", placeholder: "セイ" %>
            <%= f.text_field :first_name_kana, class: "ml-2 form-control form-control-sm", placeholder: "メイ" %>
         </div>
        </div>
        <div class="field-1">
         <div class="label">
            <%= f.label :メールアドレス%>
         </div>
         <div class="form-1">
            <%= f.text_field :email, class: "form-control form-control-sm", placeholder: "sample@gmail.com" %>
         </div>
        </div>
        <div class="field-1">
         <div class="label">
            <%= f.label :パスワード6文字以上 %>
         </div>
         <div class="form-1">
            <%= f.password_field :password, class: "form-control form-control-sm" %>
         </div>
        </div>
        <div class="field-1">
         <div class="label">
            <%= f.label :パスワード確認用 %>
         </div>
         <div class="form-1">
            <%= f.password_field :password_confirmation, class: "form-control form-control-sm" %>
         </div>
        </div>
        <div class="actions">
            <%= f.submit "新規登録", class: 'btn btn-warning btn-md'%>
        </div>
    <% end %>
   </div>
    
  <h5>既に登録済みの方は<a href="/users/sign_in">こちら</a>からログインしてください</h5>
</div>
  
  