<div class="col-md-8 mx-auto">
  <h4 class="text-center">ユーザー一覧</h4>
  <table class="table mb-5">
    <table class="table table-bordered  mb-3">
      <thead style="background-color:#dcc8dc;">
        <tr>
          <th>名前</th>
          <th>アドレス</th>
          <th>会費ステータス</th>
          <th>メール送信</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to  admin_resident_path(user) do%>
                <%= user.last_name%><%= user.first_name%>
                    <% end %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <% if user.fee_flag == false %>
                <p class="text-success font-weight-bold">会費未徴収</p>
                <% else %>
                  <p class="text-secondar font-weight-bold">会費徴収済み</p>
                  <% end %>
            </td>
            <td>
                 <%= link_to new_user_session_path,class: 'nav-link text-dark' do %><i class="far fa-envelope"></i>メール送る
                    <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
</div>