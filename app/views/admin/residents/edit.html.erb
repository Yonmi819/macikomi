<%= stylesheet_link_tag 'admin/residents' %>
  <div class="container">
    <h4>ユーザー編集</h4>
    <div class="edit-contents">
      <%= form_with model: @user, url: admin_resident_path(@user), method: :patch do |f| %>
        <%= render 'layouts/error', obj: @user %>
          <div class="field-2">
            <div class="label">
              <%= f.label :名前 %>
            </div>
            <div class="form-2">
              <%= f.text_field :last_name, class: "form-control form-control-sm", placeholder: "姓" %>
                <%= f.text_field :first_name, class: "ml-2 form-control form-control-sm", placeholder: "名" %>
            </div>
          </div>
          <div class="field-2">
            <div class="label">
              <%= f.label :フリガナ %>
            </div>
            <div class="form-2">
              <%= f.text_field :last_name_kana, class: "form-control form-control-sm", placeholder: "セイ" %>
                <%= f.text_field :first_name_kana, class: "ml-2 form-control form-control-sm", placeholder: "メイ" %>
            </div>
          </div>
          <div class="field-1">
            <div class="label">
              <%= f.label :メールアドレス %>
            </div>
            <div class="form-1">
              <%= f.text_field :email, class: "form-control form-control-sm", placeholder: "sample@gmail.com" %>
            </div>
          </div>
          <div class="field-1">
            <div class="label">
              <%= f.label :会費ステータス %>
            </div>
            <%= f.radio_button :fee_status, :false, checked: false %>
              <%= f.label :fee_status, '会費未徴収' ,class: "mr-2 d-flex align-items-center mb-0" %>
                <%= f.radio_button :fee_status, :true %>
                  <%= f.label :fee_status, '会費徴収済み',class: "d-flex align-items-center mb-0" %>
          </div>
          <div class="actions">
            <%= f.submit "変更を保存", class: 'btn btn-warning'%>
          </div>
          <% end %>
    </div>
  </div>