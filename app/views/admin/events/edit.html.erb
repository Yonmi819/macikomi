<%= stylesheet_link_tag 'admin/events' %>

<div class="container">
 <h4>イベント一覧</h4>
  <div class="edit-contents">
   <%= form_with model: @event, url: admin_event_path(@event), method: :patch do |f| %>
    <div class="form-group">
     <%= f.label :タイトル %><br/>
     <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.label :内容 %><br/>
     <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.label :日時 %><br/>
     <%= f.datetime_select :start_time, class: "form-control" %>
    </div>
     <%= f.submit "変更する", class: "mr-2 btn btn-sm btn-success" %>
   <% end %>
  </div>
</div>
 