<%= stylesheet_link_tag 'admin/events' %>
  <div class="container">
    <h4>イベントを作成する</h4>
    <div style="new-contents">
      <%= form_with model: @event, url: admin_events_path, method: :post do |f| %>
        <div class="field">
          <%= f.label :タイトル ,class: "col-3"  %>
            <%= f.text_field :title , class: "col-4 form-control"%>
        </div>
        <div class="field">
          <%= f.label :内容 ,class: "col-3" %>
            <%= f.text_field :content , class: "col-4 form-control" %>
        </div>
        <div class="field">
          <%= f.label :日時 ,class: "col-3"  %>
            <%= f.datetime_select :start_time %>
        </div>
        <div class="field">
          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-warning btn-md"%>
          </div>
        </div>
        <% end %>
    </div>
  </div>