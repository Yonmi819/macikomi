<% if obj.errors.any? %>
  <div id="error_explanation">
    <h5><%= t("errors.template.header", model: obj.model_name.human, count: obj.errors.count) %></h5>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

